//Faça um programa que leia a idade de uma pessoa expressa em anos, meses edias e mostre-a expressa apenas em dias.

//Inclusão de bibliotecas
#include <stdio.h>

//Função principal
int main()
{

//Declaração de variáveis
int idade, meses, dias, total;

//Entrada de dados
printf("Digite sua idade\n");
scanf("%d", &idade);
printf("Digite os meses\n");
scanf("%d", &meses);
printf("Digite os dias\n");
scanf("%d", &dias);

//Cálculo
total = (idade * 365) + (meses * 30) + dias - 5;

//Saída de dados
printf("Você viveu cerca de %d dias\n", total);

//Fim da função principal
return 0;
}
